<UserControl x:Class="ByteSweep.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

	<Grid Background="{StaticResource SidebarBrush}">
		<StackPanel VerticalAlignment="Stretch">
			<Button Content="🗑 Junk Files"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SidebarButton_Click"
                    Tag="JunkFiles"/>

			<Button Content="📁 Big Files"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SidebarButton_Click"
                    Tag="BigFiles"/>

			<Button Content="📄 Duplicate Files"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SidebarButton_Click"
                    Tag="DuplicateFiles"/>

			<Button Content="📝 Metadata Editor"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SidebarButton_Click"
                    Tag="MetadataEditor"/>
		</StackPanel>
	</Grid>
</UserControl>