<UserControl x:Class="ByteSweep.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:ByteSweep.Components"
             Width="200"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <StackPanel VerticalAlignment="Stretch">
            <!-- Junk Files -->
            <components:SidebarOption Text="Junk Files" Icon="{StaticResource TrashcanIconTemplate}"/>

            <!-- Big Files -->
            <components:SidebarOption Text="Big Files" Icon="{StaticResource FileIconTemplate}"/>

            <!-- Duplicate Files -->
            <components:SidebarOption Text="Duplicate Files" Icon="{StaticResource DuplicateFileIconTemplate}"/>

            <!-- Metadata Editor -->
            <components:SidebarOption Text="Metadata Editor" Icon="{StaticResource MetadataIconTemplate}"/>
            
            <!-- Disk Stats -->
            <components:SidebarOption Text="Disk Stats" Icon="{StaticResource StatsIconTemplate}"/>
        </StackPanel>
    </Grid>
</UserControl>