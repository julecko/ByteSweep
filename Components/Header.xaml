<UserControl x:Class="ByteSweep.Components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">
	<DockPanel Background="{StaticResource PrimaryBackgroundBrush}" LastChildFill="False">
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
            <ContentControl Width="30" Height="30"
                Template="{StaticResource LogoTemplate}"
                Foreground="{StaticResource AccentBrush}"/>
            <TextBlock Text="Byte Sweep" FontSize="24" FontWeight="Bold" Style="{StaticResource TextFont}" Margin="5,0,0,0"/>
		</StackPanel>
	</DockPanel>
</UserControl>